<h2>Celebrities</h2>
<a href="/celebrities/create">Add</a>
<ul>
{{#each celebrities}}
<li>
    <a href="/celebrities/{{ _id }}">{{ name }}</a>
    <form action="/celebrities/{{ _id }}/delete" method="POST">
        <button>Delete</button>
    </form>
    <form action="/celebrities/{{ _id }}/edit">
        <button>Edit</button>
    </form>
</li>
{{/each}}
</ul>