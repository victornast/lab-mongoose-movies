<h2>Add Celebrity</h2>

<form method="POST" action="/celebrities">
    <label for="input-name">Name</label>
    <input type="text" id="input-name" name="name" placeholder="Name" required/>

    <label for="input-occupation">Occupation</label>
    <select name="occupation" id="input-occupation" required>
        <option value="" selected disabled>Occupation</option>
        <option value="actor">Actor</option>
        <option value="singer">Singer</option>
        <option value="commedian">Commedian</option>
        <option value="unknown">Unknown</option>
    </select>

    <label for="input-phrase">Catch Phrase</label>
    <input type="text" id="input-phrase" name="catchPhrase" placeholder="Catch Phrase" required/>

    <button>Submit</button>
</form>