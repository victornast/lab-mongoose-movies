<h2>Edit {{ movie.name }}</h2>
<form action="/movies/{{ movie._id }}" method="POST">
    <label for="input-name">Name</label>
    <input type="text" id="input-name" name="name" placeholder="{{ movie.name }}" required value="{{ movie.name }}"/>

    <label for="input-genre">Genre</label>
    <input type="text" id="input-genre" name="genre" placeholder="{{ movie.genre }}" required value="{{ movie.genre }}"/>

    <label for="input-plot">Plot</label>
    <input type="text" id="input-plot" name="plot" placeholder="{{ movie.plot }}" required value="{{ movie.plot }}"/>

    <button>Submit</button>
</form>