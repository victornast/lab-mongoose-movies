<h2>Movies</h2>

<a href="/movies/create">Add</a>
<ul>
{{#each movies}}
<li>
    <a href="/movies/{{ _id }}">{{ name }}</a>
    <form action="/movies/{{ _id }}/delete" method="POST">
        <button>Delete</button>
    </form>
    <form action="/movies/{{ _id }}/edit">
        <button>Edit</button>
    </form>
</li>
{{/each}}
</ul>